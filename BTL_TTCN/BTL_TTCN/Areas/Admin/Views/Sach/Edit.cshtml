@model BTL_TTCN.Models.Sach
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section naviheader{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin" class="nav-link">Home</a>
        </li>
    </ul>
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Cập nhật sách</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/admin/sach">Sách</a></li>
                    <li class="breadcrumb-item active">Cập nhật</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">

    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Thông tin cập nhật</h3>


        </div>
        <div class="card-body">

            <div class="row">
                <div class="col-md-12">
                    @using (Html.BeginForm("Edit", "Sach", FormMethod.Post, new { }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        @Html.HiddenFor(x => x.MaSach)
                        <div id="logins-part" class="content active dstepper-block" role="tabpanel" aria-labelledby="logins-part-trigger">

                            <div class="form-group">
                                <label>Mã sách</label>
                                @Html.TextBoxFor(x => x.MaSach, new { @class = "form-control", @placeholder = "Mã sách" })
                                @Html.ValidationMessageFor(x => x.TenSach, null, new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label>Tên sách</label>
                                @Html.TextBoxFor(x => x.TenSach, new { @class = "form-control", @placeholder = "Tên sách" })
                                @Html.ValidationMessageFor(x => x.TenSach, null, new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                <label>Ảnh đại diện</label>
                                <div class="input-group">
                                    <div class="custom-file">
                                        @Html.TextBoxFor(x => x.AnhMinhHoa, new { @id = "txtImage", @class = "form-control" })
                                        @Html.ValidationMessageFor(x => x.AnhMinhHoa, null, new { @class = "text-danger" })

                                    </div>
                                    <div class="input-group-append">
                                        <input type="button" value="Tải ảnh" onclick="BrowseServer('txtImage');" />
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Thể loại</label>
                                @Html.DropDownList("MaTheLoai", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.MaTheLoai, null, new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label>Số lượng</label>
                                @Html.TextBoxFor(x => x.SoLuong, new { @class = "form-control", @placeholder = "Số lượng" })
                                @Html.ValidationMessageFor(x => x.SoLuong, null, new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label>Giá bán</label>
                                @Html.TextBoxFor(x => x.GiaBan, new { @class = "form-control", @placeholder = "Giá bán" })
                                @Html.ValidationMessageFor(x => x.GiaBan, null, new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                <a href="/admin/news" class="btn btn-danger">Quay lại</a>
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>

                        </div>

                    }
                </div>
            </div>
        </div>
    </div>

</section>

@section scripts{
    <script>
        $(document).ready(function () {
            CKEDITOR.replace('txtDetail', {
                customConfig: '/content/ckeditor/config.js',
                extraAllowedContent: 'span'
            })
        })
        function BrowseServer(field) {
            var finder = new CKFinder();
            finder.selectActionFunction = function (fileUrl) {
                document.getElementById(field).value = fileUrl;
            };
            finder.popup();
        }
    </script>


}
